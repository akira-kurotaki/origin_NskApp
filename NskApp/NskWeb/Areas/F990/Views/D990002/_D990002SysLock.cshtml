@model NskWeb.Areas.F990.Models.D990002.D990002Model

@if (Model.SysLocks.Locks != null && Model.SysLocks.Locks.Count() > 0)
{
    <div class="table-thead-container">
        <table class="table table-bordered table-striped" style="width:200rem;">
            <caption class="visually-hidden">システムロックロック一覧</caption>
            <thead class="sticky-top">
                <tr>
                    <th scope="col">システム区分</th>
                    <th scope="col">都道府県</th>
                    <th scope="col">ロック開始日時</th>
                    <th scope="col">ロック終了日時</th>
                    <th scope="col">ロック実行ユーザ</th>
                    <th scope="col">ロック実行処理</th>
                </tr>
            </thead>
            <tbody>
                @for (int index = 0; index < Model.SysLocks.Locks.Count(); index++)
                {
                    var item = Model.SysLocks.Locks.ElementAt(index);
                    <tr>
                        @*システム区分*@
                        <td>@Html.Label("", item.SystemKbnNm)</td>
                        @*都道府県コード*@
                        <td>@Html.Label("", TodofukenUtil.GetTodofukenNm(item.TodofukenCd))</td>
                        @*ロック開始日時*@
                        <td>@Html.Label("", item.LockDate == null ? string.Empty : ((DateTime)item.LockDate).ToString("yyyy/MM/dd HH:mm"))</td>
                        @*ロック終了日時*@
                        <td>@Html.Label("", item.LockEndDate == null ? string.Empty : ((DateTime)item.LockEndDate).ToString("yyyy/MM/dd HH:mm"))</td>
                        @*ロック実行ユーザ*@
                        <td>@Html.Label("", item.LockUserId ?? string.Empty)</td>
                        @*ロック実行処理*@
                        <td>@Html.Label("", item.LockShori ?? string.Empty)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}